<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.fanyafeng.testnew.toolar.TestToolbarActivity"
    tools:showIn="@layout/activity_test_toolbar">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/test_toobar_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="activity中测试6.0权限管理" />

            <Button
                android:id="@+id/btn_fragment_nest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="fragment中测试6.0权限管理" />

            <Button
                android:id="@+id/btn_float_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="仿钉钉首页" />

            <Button
                android:id="@+id/btn_okhttp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试okhttp" />
            <Button
                android:id="@+id/btn_bottom_sheets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试design控件" />
            <Button
                android:id="@+id/btn_autopager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试autopager" />

            <Button
                android:id="@+id/btn_webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试webview" />

            <Button
                android:id="@+id/btn_database"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试数据库" />

            <Spinner
                android:entries="@array/tab_titles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_stroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="描边效果"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shadowColor="@android:color/holo_blue_dark"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:text="新的描边效果实现"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/test_html"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/test_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
