<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.fanyafeng.testnew.TweenTest.TweenTestActivity"
    tools:showIn="@layout/activity_tween_test">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_alphaanim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="透明度调节" />

        <Button
            android:id="@+id/btn_rotateanim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="旋转调节" />

        <Button
            android:id="@+id/btn_translateanim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="尺寸调节" />

        <Button
            android:id="@+id/btn_setanim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="定义动作集合" />

        <Button
            android:id="@+id/btn_scaleanim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="平移调节" />

        <Button
            android:id="@+id/btn_smalltobig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="由小变大" />

        <TextView
            android:id="@+id/text_smalltobig"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/holo_blue_dark"
            android:text="测试由小变大" />

    </LinearLayout>

</RelativeLayout>
